{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "src/*": ["src/*"],
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "./src/types",
    ]
  },
  "include": ["src/**/*"]
}
